    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Pane prefHeight="200.0" prefWidth="200.0">
      <children>
      
                <Label fx:id="welcomeText" prefHeight="34.0" prefWidth="260.0" text="Insira uma sequência de números, separados por espaços em branco:" textFill="#e0dac9" wrapText="true" />
         <TextField alignment="BASELINE_LEFT" layoutY="64.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="25.0" prefWidth="200.0" style="-fx-max-width: 200; -fx-background-color: #e0dac9;" />
          <Button layoutX="219.0" layoutY="64.0" onAction="#onHelloButtonClick" style="-fx-background-color: #e0dac9;" text="Criar" textFill="#3f403c" />
      </children>
   </Pane>
</VBox>
